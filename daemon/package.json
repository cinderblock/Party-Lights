  "dependencies": {
    "@types/node": "^11.9.3",
    "chalk": "^2.4.2",
    "server-starter": "^1.3.1",
    "socket.io": "^2.1.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3",
    "ws": "^6.1.0"
  },
  "optionalDependencies": {
    "rpi-ws281x-native": "^0.9.0"
  }
}
